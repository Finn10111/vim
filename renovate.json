{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "ignoreDeps": [
    "renovate/renovate"
  ],
  "packageRules": [
    {
      "description": "Auto-merge Forgejo Actions workflow updates",
      "matchFileNames": [
        ".forgejo/workflows/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "matchPackageNames": ["data.forgejo.org/renovate/renovate"],
      "schedule": ["before 3am on the first day of the month"]
    },
    {
      "description": "Auto-merge minor and patch dependency updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    }
  ],
  "git-submodules": {
    "enabled": true
  }
}
